.report-detail-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #e6f7ff 0%, #f5f5f5 30%);
  padding: 20rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
  font-size: 28rpx;
  color: #8a8a8a;
}

.report-content {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.report-header {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-align: center;
}

.header-period {
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 10rpx;
  opacity: 0.9;
}

.header-date {
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  opacity: 0.7;
}

.section-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
}

.card-content {
  line-height: 1.8;
}

.question-item {
  margin-bottom: 30rpx;
  padding: 25rpx;
  background-color: #fff7e6;
  border-left: 4rpx solid #faad14;
  border-radius: 10rpx;
}

.question-item:last-child {
  margin-bottom: 0;
}

.question-topic {
  font-size: 30rpx;
  font-weight: 600;
  color: #faad14;
  margin-bottom: 15rpx;
}

.question-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}

.strength-item,
.improvement-item,
.keep-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.strength-item:last-child,
.improvement-item:last-child,
.keep-item:last-child {
  margin-bottom: 0;
}

.bullet {
  font-size: 32rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.strength-item .bullet {
  color: #52c41a;
}

.improvement-item .bullet {
  color: #ff4d4f;
}

.keep-item .bullet {
  color: #1890ff;
}

.strength-text,
.improvement-text,
.keep-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.8;
}

.empty-hint {
  font-size: 26rpx;
  color: #8a8a8a;
  text-align: center;
  padding: 40rpx 0;
}

.footer-tip {
  display: flex;
  align-items: flex-start;
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 10rpx;
  padding: 25rpx;
  margin-top: 30rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #ad8b00;
  line-height: 1.6;
}


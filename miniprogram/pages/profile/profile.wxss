.profile-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 50%, #f5f5f5 50%);
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
  font-size: 28rpx;
  color: #ffffff;
}

.profile-content {
  padding: 20rpx;
}

.header-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 20rpx;
}

.avatar-circle {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  border: 6rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-icon {
  font-size: 80rpx;
}

.user-info {
  text-align: center;
}

.user-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.user-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stats-section {
  display: flex;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8a8a8a;
}

.stat-divider {
  width: 1rpx;
  background-color: #e8e8e8;
  margin: 10rpx 0;
}

.section-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.view-detail {
  font-size: 26rpx;
  color: #1890ff;
}

.traits-container {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.trait-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.trait-name {
  width: 150rpx;
  font-size: 26rpx;
  color: #666666;
  flex-shrink: 0;
}

.trait-bar {
  flex: 1;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.trait-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.trait-score {
  width: 80rpx;
  text-align: right;
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
}

.empty-traits {
  padding: 60rpx 40rpx;
  text-align: center;
  font-size: 26rpx;
  color: #8a8a8a;
  line-height: 1.6;
}

.menu-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333333;
}

.text-danger {
  color: #ff4d4f;
}

.menu-arrow {
  font-size: 48rpx;
  color: #d9d9d9;
  font-weight: 300;
}

.info-card {
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ad8b00;
  margin-bottom: 15rpx;
}

.info-text {
  font-size: 24rpx;
  color: #ad8b00;
  line-height: 2;
}

.version-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  font-size: 22rpx;
  color: #8a8a8a;
  line-height: 1.8;
}


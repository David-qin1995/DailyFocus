.analysis-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.generate-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
}

.period-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.period-item {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  border: 2rpx solid #f5f5f5;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  transition: all 0.3s;
}

.period-item.active {
  background-color: #e6f7ff;
  border-color: #1890ff;
  color: #1890ff;
  font-weight: 500;
}

.generate-btn {
  width: 100%;
  padding: 25rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-bottom: 20rpx;
}

.generate-btn:disabled {
  background: linear-gradient(135deg, #91d5ff 0%, #69c0ff 100%);
}

.generate-btn:active:not(:disabled) {
  opacity: 0.9;
}

.tip-text {
  font-size: 24rpx;
  color: #8a8a8a;
  text-align: center;
  line-height: 1.6;
}

.reports-section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #8a8a8a;
}

.reports-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-card {
  background-color: #f9f9f9;
  border-radius: 15rpx;
  padding: 30rpx;
  transition: all 0.3s;
}

.report-card:active {
  background-color: #f0f0f0;
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.report-type {
  font-size: 30rpx;
  font-weight: 600;
  color: #1890ff;
}

.report-date {
  font-size: 24rpx;
  color: #8a8a8a;
}

.report-period {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.report-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #e8e8e8;
}

.view-btn {
  font-size: 28rpx;
  color: #1890ff;
}

.delete-btn {
  font-size: 28rpx;
  color: #ff4d4f;
}


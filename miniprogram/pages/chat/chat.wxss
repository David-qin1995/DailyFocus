.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.messages-view {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.message-item {
  margin-bottom: 30rpx;
}

.message-wrapper {
  display: flex;
  align-items: flex-start;
}

.user-message {
  justify-content: flex-end;
}

.assistant-message {
  justify-content: flex-start;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #e6f7ff;
}

.message-bubble {
  max-width: 70%;
  padding: 20rpx 25rpx;
  border-radius: 15rpx;
  word-wrap: break-word;
}

.user-bubble {
  background-color: #1890ff;
}

.assistant-bubble {
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.message-text {
  font-size: 30rpx;
  line-height: 1.6;
}

.user-bubble .message-text {
  color: #ffffff;
}

.assistant-bubble .message-text {
  color: #333333;
}

.loading-wrapper {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
}

.loading-dots {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.dot {
  width: 12rpx;
  height: 12rpx;
  margin: 0 6rpx;
  background-color: #1890ff;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.input-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1rpx solid #e8e8e8;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.input-container {
  display: flex;
  align-items: flex-end;
  gap: 20rpx;
}

.input-text {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  font-size: 30rpx;
  min-height: 80rpx;
  max-height: 200rpx;
}

.send-btn {
  padding: 20rpx 40rpx;
  background-color: #e8e8e8;
  color: #999999;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.send-btn.active {
  background-color: #1890ff;
  color: #ffffff;
}

.send-btn.active:active {
  opacity: 0.8;
}


